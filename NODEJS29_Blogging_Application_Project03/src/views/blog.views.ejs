<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>

    <%- include("./partials/styleComponent.partials.ejs") %>

</head>


<body style="min-height: 100dvh;">
    <div class="">
        <%- include("./partials/navbarComponent.partials.ejs") %>
    </div>

    <div class="container mt-4">
        <h1>
            <%= blog.title %>
        </h1>
        <img src="<%= blog.coverImageUrl %>" style="width: 25rem;">
        <pre class="mt-3"><%= blog.body %></pre>
    </div>

    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageURL %>" style="width: 70px;">
        <span>
            <%= blog.createdBy.fullName %>
        </span>
    </div>

    <div class="container mt-4">
        <h1 style="font-size: 1.5rem;">Comments: <%= comments.length %>
        </h1>
        <% if (locals.user) { %>

            <form action="/api/blogs/comments/<%= blog._id %>" method="post">

                <div class="mb-3">
                    <input type="text" name="content" class="form-control" placeholder="Enter your comment" />
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>

            </form>

            <% } %>
    </div>

    <div class="container mt-4">
        <% comments.forEach(comment=> { %>
            <div>
                <img src="<%= comment.author.profileImageURL %>" style="width: 70px;">
                <span>
                    <%= comment.author.fullName %> :
                </span>
                <div style="width: 100%; padding-left: 5rem;">
                    <span>
                        <%= comment.content %>
                    </span>
                </div>
            </div>
            <% }) %>
    </div>



    <%- include("./partials/scriptComponent.partials.ejs") %>

</body>

</html>